# JAVA 설치
###########################

### 다운로드 및 압축풀기
yum install -y wget
mkdir -p /app/java 
cd /app/java
wget http://10.10.63.63:8089/downloads/java/jdk-6u45-linux-x64.bin
chmod 755 jdk-6u45-linux-x64.bin
./jdk-6u45-linux-x64.bin
ln -s jdk1.6.0_45 java
rm jdk-6u45-linux-x64.bin

### 환경변수등록


#프로파일(apache, root)
vi /root/.bash_profile
------------------------------------------------------------------------------------
# User specific environment and startup programs
export PS1='[\u@\h \w]# '

###JAVA
export JAVA_HOME=/app/java/java
export PATH=$PATH:$JAVA_HOME/bin/
export CLASSPATH=$CLASSPATH:$JAVA_HOME/lib/tools.jar
------------------------------------------------------------------------------------


#프로파일(tomcat, wasadm)
useradd wasadm
passwd wasadm

su - wasadm

vi .bash_profile
------------------------------------------------------------------------------------
# User specific environment and startup programs
export PS1='[\u@\h \w]$ '

###JAVA
export JAVA_HOME=/app/java/java
export PATH=$PATH:$JAVA_HOME/bin/
export CLASSPATH=$CLASSPATH:$JAVA_HOME/lib/tools.jar

###TOMCAT
export CATALINA_HOME=/app/tomcat8
export PATH=$PATH:$CATALINA_HOME/bin
export CLASSPATH=$CLASSPATH:$CATALINA_HOME/lib-jsp-api.jar:$CATALINA_HOME/lib/servlet-api.jar
------------------------------------------------------------------------------------

